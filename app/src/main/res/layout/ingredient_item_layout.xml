<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_circle_ingredient"
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/circle_shape"/>

    <TextView
        android:id="@+id/tv_ingredient_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_circle_ingredient"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        tools:text="2.0"/>
    <TextView
        android:id="@+id/tv_ingredient_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_ingredient_quantity"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        tools:text="CUP"/>
    <TextView
        android:id="@+id/tv_ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_ingredient_measure"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        tools:text="Ingredient Name"/>

</androidx.constraintlayout.widget.ConstraintLayout>